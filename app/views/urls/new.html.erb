<div class="mx-auto max-w-2xl sm:max-w-4xl py-24">
  <div class="mb-24 sm:mb-32">
    <%= render 'urls/header' %>
  </div>
  <div class="py-8 px-8 sm:py-16 sm:px-16 bg-white ring-1 ring-gray-900/5 rounded-2xl shadow-lg">
    <%= form_with model: @url, class: "sm:flex sm:justify-between" do |f| %>
      <%= f.label :long_url, class: "sr-only" %>
      <%= f.url_field :long_url, pattern: '^(http|https):\/\/[a-zA-Z0-9\-\.]+\.[a-zA-Z]{2,}(\/\S*)?$', class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-400 sm:text-sm sm:leading-6", placeholder: "Enter the url to shorten here", required: true %>
      <%= f.submit "Create Short URL", class: "mt-4 w-full sm:w-fit sm:mt-0 sm:ml-4 flex-shrink-0 rounded-md bg-orange-400 py-2 px-3 text-sm text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-500" %>
    <% end %>
  </div>
</div>


